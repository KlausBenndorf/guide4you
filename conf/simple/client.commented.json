{
  "proxy": "{{{ajaxProxy}}}",
  "languageSettings": {
    "languageFile": "{{{languageFile}}}"
  },
  "view": {
    "center": [ 7.099227905273438, 50.73069673104681 ],
    "zoom": 10
  },
  "mobileLayout": {
    "mediaQueries": [
      "(max-width: 736px)"
    ],
    "scaleIcons": 1.4,
    "animations": false
  },
  "featurePopup": {
    "offset": [
      0,
      -20
    ],
    "positioning": "bottom-center",
    "iconSizedOffset": [
      0,
      -1
    ]
  },
  "featureTooltip": {
    "positioning": "top-left",
    "offset": [
      10,
      20
    ]
  },
  "showWMSFeatureInfo": {
    "style": "#defaultStyle"
  },
  "interactions": {
    "doubleClickZoom": true,
    "dragPan": true,
    "keyboardPan": true,
    "keyboardZoom": true,
    "mouseWheelZoom": true,
    "pinchZoom": true
  },
  "controls": {
    "onMap": [
      "attribution",
      "layerMenu",
      "scaleLine",
      "zoom",
      "mobileControls"
    ],
    "layerMenu": {
      "float": [
        "right",
        "top"
      ],
      "contains": [
        "baseLayerSelector",
        "featureLayerSelector"
      ]
    },
    "mobileLayerMenu": {
      "controlType": "layerMenu",
      "collapsible": false,
      "contains": [
        "baseLayerSelector",
        "featureLayerSelector"
      ]
    },
    "mobileControls": {
      "float": "fixed",
      "contains": [
        "mobileLayerMenu",
        "infoButton"
      ]
    },
    "scaleLine": {
      "float": [
        "right",
        "bottom"
      ]
    },
    "zoom": {
      "slider": false,
      "buttons": true,
      "float": [
        "left",
        "top"
      ]
    },
    "baseLayerSelector": {
      "controlType": "layerSelector",
      "menuName": "baseLayers",
      "minLayerAmount": 2,
      "title": "Maps"
    },
    "featureLayerSelector": {
      "controlType": "layerSelector",
      "menuName": "featureLayers",
      "minLayerAmount": 1,
      "title": "Information"
    },
    "infoButton": {
      "contentURL": {
        "de": "files/infos_de.html",
        "en": "files/infos_en.html"
      }
    },
    "attribution": {
      "float": [
        "left",
        "bottom"
      ],
      "importance": 99
    }
  },
  "styleMap": {
    "#defaultStyle": {
      "fill": {
        "color": "rgba( 0, 113, 188, 0.3)"
      },
      "stroke": {
        "color": "rgba( 46, 49, 146, 0.8)",
        "width": 2
      },
      "image": {
        "type": "circle",
        "radius": 7.5,
        "fill": {
          "color": "rgba( 0, 113, 188, 0.3)"
        },
        "stroke": {
          "color": "rgba( 46, 49, 146, 0.8)",
          "width": 2
        }
      }
    }
  }
}
